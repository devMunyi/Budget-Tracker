<%= render 'shared/nav', title: 'Category'%>
<div class="container">
  <%= render 'shared/notification_box'%>
  <div class="form-section d-flex justify-content-center align-items-center mb-3">
    <%= form_with model: @new_category, html: { class:'bs' }, url: categories_path do |f| %>
      <div class='text-center px-4 py-2 gap-2 bg-dark text-white d-flex justify-content-center align-items-center'>
        <svg class="svg-icon" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
        </svg>
        <div class='fs-4'>Add Category</div>
      </div>

      <div class='px-4 pb-4'>
        <div class="field mb-3">
          <%= f.label :name, class:'form-label' %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form-control', required: true %>
        </div>

        <div class="field mb-3">
          <%= f.label :icon, class:'form-label' %><br />
          <%= f.file_field :icon, autocomplete: "icon", class:'form-control', required: true %>
        </div>

        <div class="actions d-grid mb-3">
          <%= f.submit "Save", class: 'btn btn-outline-primary' %>
        </div>

        <div class="d-flex justify-content-center back-btn">
          <%= link_to "< Back", "/categories", class:'text-center' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
