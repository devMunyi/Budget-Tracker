
<div class="form-section d-flex justify-content-center align-items-center mb-3">
  <%= form_for(resource, as: resource_name, html: { class:'bs' }, url: session_path(resource_name)) do |f| %>
    <div class='text-center bg-dark text-white'>
      <h2 class='px-4 py-3 fs-3'>Sign In</h2>
    </div>

    <div class='px-4 pb-4'>
      <div class="field mb-3">
        <%= f.label :email, class:'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class:'form-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me, class:'checkbox' %>
          <%= f.label :remember_me, class:'form-label' %>
        </div>
      <% end %>

      <div class="actions d-grid mb-3">
        <%= f.submit "Log in", class: 'btn btn-outline-primary' %>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
