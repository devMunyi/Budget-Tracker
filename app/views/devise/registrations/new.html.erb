<section>
  <div class='form-section d-flex justify-content-center align-items-center'>
    <%= form_for(resource, as: resource_name, html: { class: 'bs' }, url: registration_path(resource_name)) do |f| %>
      <div class='text-center bg-dark text-white'>
        <h2 class='px-4 py-3 fs-3'>Sign up</h2>
      </div>
      <div class='px-4 pb-4'>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field pb-2">
            <%= f.label :name, class: 'form-label' %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, class: 'form-control' %>
          </div>

          <div class="field pb-2">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'form-control' %>
          </div>

          <div class="field pb-2">
            <%= f.label :password, class: 'form-label' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-label', required: true, class: 'form-control' %>
          </div>

          <div class="field pb-3">
            <%= f.label :password_confirmation, class: 'form-label' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-label', required: true, class: 'form-control' %>
          </div>

          <div class="actions d-grid pb-3">
            <%= f.submit "Sign up", class: 'btn btn-outline-primary' %>
          </div>

          <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</section>