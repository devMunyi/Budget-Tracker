<div class="mb-5">  
  <div class="bs mb-3">
    <div class="d-flex justify-content-between align-items-center px-2">
      <%= link_to '< Back', categories_path %>

      <h1 class="text-center self-align-center flex-grow-1">
        Total: $<%= @expenses_sum.to_s + "0" %>
      </h1>
    </div>
  </div>


  <ul class='item'>
    <% if @expenses.empty? %>
    <li class="text-center card p-4"><i>No Transactions available</i></li>
    <% else %>
    <% @expenses.each_with_index do |t, i| %>
      <li class='category-item'>
        <div class="card p-3 mb-3">
          <div class="row">
            <div class="col-4">
              <%= image_tag @category.icon, class: 'img-fluid' %>
            </div>

            <div class="col-5">
              <div class="text-muted text-bold d-flex flex-column gap-3 justify-content-center pt-4">
                <h3 class="category-name fs-4"><%= t.name %></h3>
                <p class="date-created fs-4"><%= t.format_date(t.created_at) %></p>
              </div>
            </div>

            <div class="col-3">
              <div class="text-bold text-black pt-4">
                <h3 class="fs-4"><%= "$" + t.amount.to_s + "0"  %></h3>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
    <% end %>
  </ul>

  <div class="d-grid">
    <%= link_to new_category_expense_path(@category), class: "btn btn-outline-success d-flex justify-content-center align-items-center" do %>
      <svg class="svg-icon text-bold fs-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"></path>
      </svg>
      <span class="text-bold fs-4">Add Transaction</span>
    <% end %>
  </div>
</div>